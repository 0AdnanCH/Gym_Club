  <script>
    async function cartQtyUpdate(event, id, index) {
        event.preventDefault();
        try {
            const quantity = document.getElementById('quantity'+index).value;
            if(!quantity) {
                return;
            }
            const response = await fetch(`/qtyUpdate?id=${id}`, {
                method: 'PATCH',
                headers: {
                'content-type': 'application/json'
                },
                body: JSON.stringify({quantity})
            });
            const data = await response.json(); 
            if(!response.ok) {
                if(data.redirectUrl) {
                    return window.location.href = data.redirectUrl;
                }
                if(data.existsQty) {
                    document.getElementById('quantity'+index).value = data.existsQty;
                }
                throw new Error(data.message);
            }
            if(data.success) {
                Swal.fire({
                    position: "top-end",
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 1500,
                    customClass: {
                        popup: 'custom-swal-popup'
                    }
                })
                .then(() => {
                    document.getElementById('total-price'+index).innerHTML = data.totalPrice;
                    document.getElementById('subtotal').innerHTML = data.subtotal;
                    document.getElementById('total-amount').innerHTML = data.totalAmount;
                })
            }
        } catch (error) {
            Swal.fire({
                position: "top-end",
                icon: "error",
                title: "Oops...",
                text: error.message,
                showConfirmButton: false,
                timer: 1500,
                customClass: {
                    popup: 'custom-swal-popup'
                }
            })
        }
    }
    async function removeCartItem(event,id, index) {
        event.preventDefault();
        try {
            const response = await fetch(`/removeCartItem?id=${id}`, { method: 'DELETE' });
            const data = await response.json();
            if(!response.ok) {
                if(data.redirectUrl) {
                    return window.location.href = data.redirectUrl;
                }
                throw new Error(data.message);
            }
            if(data.success) {
                Swal.fire({
                    position: "top-end",
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 1500,
                    customClass: {
                        popup: 'custom-swal-popup'
                    }
                })
                .then(() => {
                    document.getElementById('cart-item-row'+index).style.display = 'none';
                    document.getElementById('subtotal').innerHTML = data.subtotal;
                    document.getElementById('total-amount').innerHTML = data.totalAmount;
                    document.querySelectorAll('.cart-qty').forEach(elem => elem.innerHTML = data.cartQty);
                })
            }
        } catch (error) {
            Swal.fire({
                position: "top-end",
                icon: "error",
                title: "Oops...",
                text: error.message,
                showConfirmButton: false,
                timer: 1500,
                customClass: {
                    popup: 'custom-swal-popup'
                }
            })
        }
    }

