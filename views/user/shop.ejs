  <script>
      const sort = document.getElementById('sort_product');
      const categoryCheckboxes = document.querySelectorAll('.category-checkbox');
    function sortSearchPro() {
        const sortBy = sort.value;
        const searchBy1 = document.getElementById('header_search1').value;
        // const searchBy2 = document.getElementById('header_search2').value;

        const selectedCategories = Array.from(categoryCheckboxes)
        .filter(checkbox => checkbox.checked)
        .map(checkbox => checkbox.value);

        const categoryParam = selectedCategories.length > 0 ? `&categories=${selectedCategories.join(',')}` : '';
        
        window.location.href = `/shop?sort=${sortBy}&search=${searchBy1}&${categoryParam}`;
    }
    categoryCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', (event) => {
            event.preventDefault();
            sortSearchPro()
        });
    });
    const searchbtn1 = document.getElementById('search-btn1');
    // const searchbtn2 = document.getElementById('search-btn2');
    sort.addEventListener('change', (event) => {
        event.preventDefault();
        sortSearchPro()
    });
    searchbtn1.addEventListener('click', (event) => {
        event.preventDefault();
        sortSearchPro()
    });
