  <script>
    async function validateAndSubmit(event) {
      document.getElementById('signup-btn').classList.add('btn-disabled');
      event.preventDefault();
      clearError();
      const formData = validateForm();
      if(!formData) {
          document.getElementById('signup-btn').classList.remove('btn-disabled');
          return;
        }
      document.getElementById("loading-overlay").classList.remove('hidden');
      document.body.classList.add('blurred');
      try {     
        const response = await fetch('/signup', {
          method: 'POST',
          headers: {
            'content-type': 'application/json'
          },
          body:JSON.stringify(formData)
        });
        const data = await response.json();
        if(!response.ok) {
          throw new Error(data.message);
        }
        if(data.success) {
          document.getElementById("loading-overlay").classList.add('hidden');
          document.body.classList.remove('blurred');
          Swal.fire({
            position: "top-end",
            html: `
                  <div style="display: flex; align-items: center; gap: 10px;">
                      <div>
                            <div class="swal2-icon swal2-success" style="width: 30px; height: 30px; margin: 0; font-size: 16px;"></div>
                      </div>
                      <div style="font-size: 20px; text-align: left;">Success!</div>
                  </div>
            `,
            showConfirmButton: false,
            timer: 1500,
            customClass: {
                  popup: 'compact-swal-popup',
            }
          })
          .then(() => {
              window.location.href = '/otp';
              document.getElementById('signup-btn').classList.remove('btn-disabled');
          });
        } 
      } catch (error) {
        document.getElementById('signup-btn').classList.remove('btn-disabled');
        document.getElementById("loading-overlay").classList.add('hidden');
        document.body.classList.remove('blurred');
        Swal.fire({
              position: "top-end",
              html: `
                    <div style="display: flex; align-items: center; gap: 10px;">
                        <div>
                              <div class="swal2-icon swal2-error" style="width: 30px; height: 30px; margin: 0; font-size: 16px;"></div>
                        </div>
                        <div style="font-size: 20px; text-align: left;">Oops... ${error.message}</div>
                    </div>
              `,
              showConfirmButton: false,
              timer: 1500,
              customClass: {
                    popup: 'compact-swal-popup',
              }
          });
      }
    }

    document.getElementById('signup-btn').addEventListener('click', validateAndSubmit);

    function validateForm() {
      let isValid = true;
      const name = document.getElementById('name').value;
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      const cpassword = document.getElementById('confirm-password').value;
      const emailReg = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|.(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
      if(name.trim() === "") {
        isValid = false;
        showError('name-error', 'Please enter a valid name.');
      } else if(!/^[A-Za-z\s]+$/.test(name)) {
        isValid = false;
        showError('name-error', 'Name can only contain alphabets and spaces.');
      }
      if(email.trim() === "") {
        isValid = false;
        showError('email-error', 'Please enter a email address.');
      } else if(!emailReg.test(email)) {
        isValid = false;
        showError('email-error', 'Please enter a valid email, includes @ .com');
      } 
      if(password.length < 8) {
        isValid = false;
        showError('password-error', 'Password should contain atleast 8 characters.');
      } else if(!/[a-zA-Z]/.test(password)) {
        isValid = false;
        showError('password-error', 'Password should contain alphabets.');
      } else if(!/\d/.test(password)) {
        isValid = false;
        showError('password-error', 'Password should contain numbers.');
      }
      if(password !== cpassword) {
        isValid = false;
        showError('cpassword-error', 'Password do not match.');
      }
      if(isValid) {
        return {
          name, 
          email, 
          password, 
          cpassword
        };
      } else {
        return false;
      }
    }
    function clearError() {
      document.querySelectorAll('.error-message').forEach(element => element.style.display = 'none');
    }
    function showError(id, message) {
      document.getElementById(id).innerHTML = message;
      document.getElementById(id).style.display = 'block';
    }

    document.getElementById('google-btn').addEventListener('click', () => {
      document.getElementById("loading-overlay").classList.remove('hidden');
      document.body.classList.add('blurred');


      setInterval(() => {
        document.getElementById("loading-overlay").classList.add('hidden');
        document.body.classList.remove('blurred');
      }, 2000);
    })

    const password = document.getElementById('password');
    const passToggleButton = document.getElementById('toggle-password');
    const passEyeIcon = document.getElementById('eye-icon0');

    const cpassword = document.getElementById('confirm-password');
    const cpassToggleButton = document.getElementById('toggle-cpassword');
    const cpassEyeIcon = document.getElementById('eye-icon1');

    passToggleButton.addEventListener('click', () => {
      const isPasswordVisible = password.type === 'text';
      password.type = isPasswordVisible ? 'password' : 'text';

      // Toggle the icon class
      passEyeIcon.classList.toggle('open-eye', !isPasswordVisible);
      passEyeIcon.classList.toggle('closed-eye', isPasswordVisible);
    });

    cpassToggleButton.addEventListener('click', () => {
      const isPasswordVisible = cpassword.type === 'text';
      cpassword.type = isPasswordVisible ? 'password' : 'text';

      // Toggle the icon class
      cpassEyeIcon.classList.toggle('open-eye', !isPasswordVisible);
      cpassEyeIcon.classList.toggle('closed-eye', isPasswordVisible);
    });

  </script>

